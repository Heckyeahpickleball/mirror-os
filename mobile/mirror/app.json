{
  "expo": {
    "name": "Mirror",
    "slug": "mirror",
    "scheme": "mirror",
    "plugins": [
      ["react-native-vision-camera"],
      ["expo-build-properties", {
        "ios": { "useFrameworks": "static" }
      }]
    ],
    "ios": {
      "bundleIdentifier": "com.mirroros.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Mirror needs the camera for video journaling.",
        "NSMicrophoneUsageDescription": "Mirror needs the microphone for audio journaling."
      }
    },
    "android": {
      "package": "com.mirroros.app",
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO"
      ]
    }
  }
}
